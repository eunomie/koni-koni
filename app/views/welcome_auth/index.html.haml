.container
  .row
    .col-md-12
      .card
        .card-block
          .media
            .media-left
              = image_tag current_user.gravatar_url, class: 'img-circle'
            .media-body
              %h4.media-heading
                = current_user.name
              = current_user.organization
              - if !current_user.team.nil?
                = "- #{current_user.team}"
  .row
    .col-md-12
      .card
        .card-block
          %h4.card-title
            = succeed '?' do
              How was your day
              - if current_user.team
                = " in #{current_user.team} team"
          = render 'moods/form'

  .row
    .col-md-12
      .card
        .card-block
          %h4.card-title
            History
          = area_chart @moods
          %dl
            - @moods.each do |date, moods|
              %dd= date.to_s
              %dt= moods
